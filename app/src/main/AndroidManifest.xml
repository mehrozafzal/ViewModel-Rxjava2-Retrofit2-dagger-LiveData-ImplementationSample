<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karobar.karobarcompany">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.LoginActivity" />
        <activity android:name=".view.activities.RegisterActivity" />
        <activity android:name=".view.activities.IntroductionActivity" />
        <activity android:name=".view.activities.BaseActivity" />
        <activity android:name=".view.activities.HomeActivity" />
        <activity android:name=".view.activities.OrderActivity" />
        <activity android:name=".view.activities.ProductActivity" />
        <activity android:name=".view.activities.SupervisorActivity" />
        <activity android:name=".view.activities.DeliveryManActivity"/>
    </application>

</manifest>